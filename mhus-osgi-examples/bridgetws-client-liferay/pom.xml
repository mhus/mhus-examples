			<artifactId>mhu-lib-core</artifactId>
			<version>${mhulib.version}</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>de.mhus.lib</groupId>
			<artifactId>mhu-lib-liferay</artifactId>
			<version>${mhulib.version}</version>
			<type>jar</type>
			<exclusions>
